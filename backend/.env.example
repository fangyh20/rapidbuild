# Server Configuration
PORT=8092

# AWS S3 Configuration
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET=your-s3-bucket-name

# Vercel Configuration
VERCEL_TOKEN=your_vercel_token

# RESTHeart Configuration (MongoDB API)
RESTHEART_URL=https://api.rapidbuild.app
RESTHEART_API_KEY=your_restheart_api_key

# Workspace Configuration
WORKSPACE_DIR=/tmp/rapidbuild-workspaces
STARTER_CODE_DIR=../../react-app

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# JWT Configuration
JWT_SECRET=your_jwt_secret_at_least_32_characters_long

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Google OAuth Configuration (optional)
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:8092/api/v1/auth/google/callback
GOOGLE_OAUTH_REDIRECT_URL_PROD=https://backend.yourdomain.com/api/v1/auth/google/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Redis Configuration (Upstash)
REDIS_URL=rediss://default:password@host:6379
